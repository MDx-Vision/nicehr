{
  "name": "nicehr-remote-support",
  "version": "1.0.0",
  "description": "Standalone remote support system for NICEHR",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "db:seed": "cd server && npm run db:seed",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:p0": "cypress run --spec 'cypress/e2e/0[1-4]*.cy.js'",
    "test:p1": "cypress run --spec 'cypress/e2e/0[5-8]*.cy.js'",
    "test:p2": "cypress run --spec 'cypress/e2e/09*.cy.js,cypress/e2e/1[0-5]*.cy.js'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cypress": "^15.8.1"
  }
}
