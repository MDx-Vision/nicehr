{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.test.ts",
    "shared/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client"
  ]
}
